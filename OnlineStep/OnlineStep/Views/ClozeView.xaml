<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="OnlineStep.Views.ClozeView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:local="clr-namespace:OnlineStep.Assets;assembly=OnlineStep"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:OnlineStep.ViewModels;assembly=OnlineStep"
    x:DataType="viewModels:ClozeViewModel"
    mc:Ignorable="d">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Title}" />
            <Image Source="wave.jpg" />
            <Label Text="{Binding SentencesPartOne}" />
            <Entry
                x:Name="MissingWordEntry"
                Placeholder="{Binding EntryPlaceholder}"
                Text="{Binding GuessedWord}" />
            <Label Text="{Binding SentencesPartTwo}" />
            <Button Command="{Binding CheckCorrectAnswer}" Text="RÄTTA" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

