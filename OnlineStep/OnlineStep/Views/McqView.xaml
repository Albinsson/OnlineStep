<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="OnlineStep.Views.McqView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:OnlineStep.ViewModels;assembly=OnlineStep"
    x:DataType="viewModels:McqViewModel"
    mc:Ignorable="d">
    <ContentPage.Resources>
        <ResourceDictionary Source="/Styles/Global.xaml" />
        <ResourceDictionary Source="/Styles/Text.xaml" />
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Frame
                Margin="16,16,16,0"
                Padding="0"
                CornerRadius="8"
                IsClippedToBounds="True">
                <ProgressBar Progress="{Binding Progress}" Style="{StaticResource ProgressBar}" />
            </Frame>
            <Frame
                Margin="16"
                Padding="0"
                CornerRadius="8"
                HeightRequest="200"
                IsClippedToBounds="True"
                WidthRequest="400">
                <Image
                    Aspect="AspectFill"
                    HeightRequest="200"
                    Source="wave.jpg"
                    WidthRequest="400" />
            </Frame>
            <Label Text="{Binding Question}" />
            <ListView
                BackgroundColor="Transparent"
                HasUnevenRows="True"
                ItemsSource="{Binding AnswerList}"
                SelectionMode="None"
                SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <!--  TODO: Bug need to be fixed...  -->
                            <StackLayout Orientation="Vertical" VerticalOptions="End">
                                <Button
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:McqViewModel}}, Path=SelectAnswer}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource MainPageButton}"
                                    Text="{Binding}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--<Button Command="{Binding CheckCorrectAnswer}" Text="RÄTTA" />-->
        </StackLayout>
    </ContentPage.Content>
