<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>

<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <x:String x:Key="PrimaryColor">#197db7</x:String>

    <Style x:Key="MainPageButton" TargetType="{x:Type Button}">
        <Setter Property="WidthRequest" Value="350" />
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="CharacterSpacing" Value="1.3" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="BorderRadius" Value="8" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="ProgressBar" TargetType="{x:Type ProgressBar}">
        <Setter Property="ProgressColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="ScaleY" Value="8" />
    </Style>

</ResourceDictionary>